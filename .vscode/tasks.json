{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "echo",
      "type": "shell",
      "command": "echo Hello"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++-13 build active file",
      "command": "/usr/bin/g++-13",
      "args": [
        "-g",
        "-std=c++23",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/g++-13"
    },
    {
      "type": "cppbuild",
      "label": "Build with clang 18.1.3",
      "command": "/usr/bin/clang++-18",
      "args": [
        "-g",
        "-std=c++23",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: usr/bin/clang++-18"
    }
  ]
}